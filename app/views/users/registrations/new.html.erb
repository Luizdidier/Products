<body class='bg-sess'>
  <div class='container-fluid' style='margin-top: 13%' %>
   <ul class='errors'>
     <% @user.errors.full_messages.each do |message| %>
     <li style='padding-bottom: 1%'><%= message %></li>
     <% end %>
   </ul>
   <div class='row' style=' margin-left: auto; margin-right: auto'>
    <div class=' col-lg-4 col-md-4 col-sm-4 form-login-border ' align='center' style=' padding-bottom: 1%; float:none; margin: 0 auto;'>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <h1><strong>Cadastre-se.<strong></h1>
      <h5><strong>Email:</strong></h5>
      <%= f.email_field :email, autofocus: true %>
    </br>
    <h5><strong>Senha:</strong></h5>
    <%= f.password_field :password, autocomplete: "off" %>
    <h4><strong>Confime a senha : </strong></h4>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <br>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> characters minimum)
    <% end %><br />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="wrapper">
      <span class="group-btn">     
       <%= render "users/shared/links" %>
       <span class="btn-md"><%= f.submit "Confimar", :class => 'btn btn-success' %> <i class="fa fa-sign-in"></i></span>
     </span>
     <% end %> 
   </div>
 </div>
</div>
</div>
</body>
