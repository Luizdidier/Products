<body class='bg-sess'>
  <div class='container-fluid' style='margin-top: 15%' %>
    <ul class='errors'>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <div class='row' style=' margin-left: auto; margin-right: auto'>
      <div class=' col-lg-4 form-login-border ' style=' padding-bottom: 1%; float:none; margin: 0 auto;'>
        <div align='center'>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <h3>Esqueceu a Senha? Solicite aqui</h3>
          <h5><strong>Email:</strong></h5>
          <%= f.email_field :email, autofocus: true %>
        </br>
        <div class="wrapper">
          <span class="group-btn">     
           <%= render "users/shared/links" %>
           <span class="btn-md"><%= f.submit "Solicite", :class => 'btn btn-success' %> <i class="fa fa-sign-in"></i></span>
         </div>
       </span>
       <% end %> 
     </div>
   </div>
 </div>
</div>
</body>
