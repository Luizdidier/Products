<!-- Navbar -->
<body >
  <div class='container-fluid'>
    <div class='row' align='center'>    
      <nav class='navbar menu' >
        <ul>
          <li class="col-lg-2 col-md-2 col-sm-2 col-xs-2 col-2" style="margin-left: -4%"><a href='#'>Produtos</a>
            <ul>
              <li><%= link_to 'Cadastrar', new_product_path %></li>
              <li><%= link_to 'Ver todos', products_path %></li>
            </ul>
          </li>
          <li class="col-lg-2 col-md-2 col-sm-2 col-xs-2 col-2" style="margin-left: -2%"><a href='#'>Marcas</a>
            <ul>
              <li><%= link_to 'Cadastrar', new_brand_path %></li>
              <li><%= link_to 'Ver todos', brands_path %></li>
            </ul></li>
            <li class="col-lg-2 col-md-2 col-sm-2 col-xs-2 col-2" style="margin-left: -2%" ><a href='#'>Categorias</a>
              <ul>
                <li><%= link_to 'Cadastrar', new_category_path %></li>
                <li><%= link_to 'Ver todos', categories_path %></li>
              </ul>
            </li>
            <li class="col-lg-2 col-md-2 col-sm-2 col-xs-2 col-2" style="margin-left: -2%">
              <%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>

            </nav>
          </div>
        </div>
      </div>
    </div>


    <div class="container-fluid" ng-controller='ListProductCtrl'>
      <h2 style='text-align: center'>Produtos</h2>
    </div>

    <!-- Table -->
    <div class="table-responsive" style="width: 70%; margin-left: auto; margin-right: auto;">
      <div ng-app='myApp' ng-controller='ListProductCtrl'>
        <div align='center' style='min-width: 70%;'>
         <input type="text" ng-model="agoravai" class='form-control' style='width: 25%; text-align: center' placeholder="Informe o nome ...">
       </div>
       <table class="table table-striped">
        <thead>
          <tr>
            <th> Foto </th>
            <th> Nome </th>
            <th> Preço </th>
            <th> Marca </th>
            <th> Categoria </th>
            <th></th>
          </tr>
        </thead>
        <tbody ng-repeat="products in product | filter:{name:agoravai}">
          <td><img src='{{products.picture_url}}'></td>
          <td>{{products.name}}</td>
          <td>{{products.price}}</td>
          <td>{{products.brand.name}}</td>
          <td>{{products.category.name}}</td>
          <td>
            <a href='products/{{products.id}}' class='btn btn-info'>Ver</a>
            <a data-method='delete' data-confirm='Você tem certeza?' href='/api/v1/products/{{products.id}}' class='btn btn-danger'> Deletar </a>
          </td>
        </tbody>
      </table>
    </div>
    <%= link_to 'Novo Produto', new_product_path, :class => 'btn btn-primary' %>
  </div>
</div>
</div>
</div>

</body>