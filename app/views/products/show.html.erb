              </nav>
            </div>
          </div>
        </div>
      </div>

	<div class='container-fluid'>
		<div class='row'>
			<div class=' col-lg-12 ' align='center'>
				<hr>
				<%= image_tag @product.picture.url(:medium) %>
				<hr>
			</div>
		</div>
	</div>
	<div class='container-fluid'>
		<div class='row'>
			<div class=' col-lg-12 ' align='center' style='padding-bottom: 0.2%;'>
				<strong>Nome:</strong>
				<%= @product.name %>
			</div>
			<div class=' col-lg-12 ' align='center' style='padding-bottom: 0.2%;'>
				<strong>Pre√ßo:</strong>
				<%= @product.price %>
			</div>
			<div class=' col-lg-12 ' align='center' style='padding-bottom: 0.2%;'>
				<strong>Marca:</strong>
				<%= @product.brand.name %>
			</div>
			<div class=' col-lg-12 ' align='center' style='padding-bottom: 0.2%;'>
				<strong>Categoria:</strong>
				<%= @product.category.name %>
			</div>
			<div class=' col-lg-12 ' align='center' style='padding-top: 0.2%;'>
				<%= link_to 'Editar', edit_product_path(@product), :class => 'btn btn-warning'
				%> 
				<%= link_to 'Voltar', products_path, :class => 'btn btn-danger' %>
			</div>
		</div>
	</div>
