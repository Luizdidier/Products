            </div>
          </div>
        </div>
      </div>

		<div class='container-fluid'>
			<div class='row'>
				<div class=' col-lg-12 ' align='center'>
					<hr>
					<%= image_tag @brand.picture.url(:medium) %>
					<hr>
				</div>
			</div>
		</div>
		<div class='container-fluid'>
			<div class='row'>
				<div class=' col-lg-12 ' align='center' style='padding-bottom: 0.2%;'>
					<strong>Nome:</strong>
					<%= @brand.name %>
				</div>
				<div class=' col-lg-12 ' align='center' style='padding-top: 0.2%;'>
					<%= link_to 'Editar', edit_brand_path(@brand), :class => 'btn btn-warning'
					%> 
					<%= link_to 'Voltar', brands_path, :class => 'btn btn-danger' %>
				</div>
			</div>
		</div>
