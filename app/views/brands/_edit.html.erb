    <p class='form-p' style='padding-left: 5%'>Atualizar Marca</p>
    <%= form_with(model: brand, local: true, html: { multipart: true }) do |form| %>
    <%= form.label 'Nome:' %>
    <br>
    <%= form.text_field :name, id: :product_name %>
    <br>
    <%= form.label 'Foto:'%> 
    <br>
    <%= form.file_field :picture %>
    <br>
    <div class="wrapper">
      <span class="group-btn">     
        <%= form.submit 'Atualizar Marca', :class => 'btn btn-success' %>
        <%= link_to 'Voltar', brands_path, :class => 'btn btn-warning' %>
      </div>
    </span>
    <% end %> 