    <!-- Search Form -->
    <div class="container-fluid">
      <h2 style='text-align: center'>Marcas</h2>
      <div class='row' align='center'>
        <div class='input-group' style="padding-right: 7%;">
         <span class='col-sm-3 col-xs-3 col-lg-3 col-md-3'>

         </span>
         <span class='col-sm-3 col-xs-3 col-lg-3 col-md-3 input-group-btn' style='min-width: 60%;' >
          <%= form_tag(brands_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Procure pelo nome..." , :class =>'form-control' %>
          <span style='padding-left: 3%'>
            <%= submit_tag "Procure", :class => 'btn btn-primary'  %>
            <% end %>
          </span>
        </span>
        <span class='col-sm-3 col-xs-3 col-lg-3 col-md-3'>

