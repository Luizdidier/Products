<!-- Table -->
<div class="table-responsive" style="width: 70%; margin-left: auto; margin-right: auto;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Foto</th>
        <th>Nome</th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
      <tr>
        <td><%= image_tag brand.picture.url(:thumb) %></td>
        <td style='padding-top: 2%'><%= brand.name %></td>
        <td class='text-right'><%= link_to 'Ver', brand_path(brand), :class => 'btn btn-info' %> 
          <%= link_to 'Editar', edit_brand_path(brand), :class => 'btn btn-warning' %>
          <%= link_to 'Deletar', brand, method: :delete, data: { confirm: 'Tem certeza? ' }, :class => 'btn btn-danger' %></td>
          <%end%>
        </tr>
      </tbody>
    </table>
    <%= link_to 'Nova marca', new_brand_path, :class => 'btn btn-primary' %>
  </div>
